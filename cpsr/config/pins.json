{
  "description": "GPIO pin assignments for GoPiGo3",
  "sensors": {
    "ultrasonic_front": {
      "trigger": "AD1",
      "echo": "AD1"
    },
    "ultrasonic_rear": {
      "trigger": "AD2",
      "echo": "AD2"
    },
    "tof_left": {
      "i2c_address": "0x29"
    },
    "tof_right": {
      "i2c_address": "0x30"
    }
  },
  "io_devices": {
    "feeder_servo": {
      "pin": "SERVO1",
      "min_pulse": 500,
      "max_pulse": 2500
    },
    "collector_servo": {
      "pin": "SERVO2",
      "min_pulse": 500,
      "max_pulse": 2500
    },
    "status_led": {
      "pin": "LED_EYE_LEFT"
    },
    "buzzer": {
      "pin": "LED_BLINKER_LEFT"
    }
  },
  "load_cells": {
    "hx711": {
      "dout": 23,
      "pd_sck": 24,
      "calibration_factor": 1.0
    }
  }
}

